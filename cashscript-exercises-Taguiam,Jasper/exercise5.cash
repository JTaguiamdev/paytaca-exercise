pragma cashscript ^0.11.0;


contract Exercise5 (bytes20 walletAddress) {

    /*
        make a contract where the user can only spend funds if:

        1. the recipient is your wallet
        2. the spending amount should not exceed 100,000 satoshis
     */

    function spend() {
        require(tx.outputs.length >= 1);
        require(tx.outputs[0].lockingBytecode == new LockingBytecodeP2PKH(walletAddress));
        require(tx.outputs[0].value <= 100000);
    }
}