pragma cashscript ^0.11.0;


contract Exercise2 () {

    /*
        make a contract where the user can only spend funds if:

        1. the transaction inputs is exactly 1
        2. the transaction outputs is at least 2
        3. the first output amount is at least 2500 satoshis
     */

    function spend() {
        require(tx.inputs.length == 1);
        require(tx.outputs.length >= 2);
        require(tx.outputs[0].value >= 2500);
    }
}